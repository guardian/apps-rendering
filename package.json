{
  "name": "apps-rendering",
  "version": "0.0.1",
  "description": "Article rendering for The Guardian iOS and Android apps",
  "main": "server/server.ts",
  "browserslist": [
    "android >= 5",
    "ios >= 11"
  ],
  "scripts": {
    "upload": "node-riffraff-artifact",
    "copy-manifest": "cp dist/assets/manifest.json dist/server/manifest.json",
    "copy-fonts": "cp -R assets/fonts dist/assets/fonts",
    "test": "jest --verbose",
    "test:coverage": "npm run test; open coverage/index.html",
    "test:watch": "jest --watch",
    "lint": "node_modules/eslint/bin/eslint.js -c config/.eslintrc.js ./ --ext '.ts,.tsx'",
    "watch:server": "webpack --config webpack.config.ts --config-name server --env.watch",
    "watch:client": "webpack-dev-server --config webpack.config.ts --config-name client",
    "watch": "npm run watch:server & npm run watch:client",
    "build:server": "webpack --config webpack.config.ts --config-name server",
    "build:client": "webpack --config webpack.config.ts --config-name client",
    "build:server:prod": "webpack --config webpack.config.ts --config-name server --env.production",
    "build:client:prod": "webpack --config webpack.config.ts --config-name clientProduction",
    "storybook": "start-storybook -s ./ -p 8181 --ci",
    "build-storybook": "build-storybook -o dist",
    "deploy-storybook": "storybook-to-ghpages && ./.storybook/pushFonts.sh"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest/presets/js-with-babel",
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "text",
      "html",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/renderer.ts",
      "<rootDir>/src/item.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@guardian/src-foundations|@guardian/types|@guardian/src-icons)/)"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@creditkarma/thrift-server-core": "^0.16.1",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@guardian/apps-rendering-api-models": "^0.10.0",
    "@guardian/atoms-rendering": "1.9.0",
    "@guardian/bridget": "^0.67",
    "@guardian/content-api-models": "^15.9.1",
    "@guardian/content-atom-model": "^3.2.2",
    "@guardian/node-riffraff-artifact": "^0.1.9",
    "@guardian/src-radio": "^2.3.0",
    "@guardian/src-text-area": "^2.3.0",
    "@guardian/src-text-input": "^2.3.0",
    "@guardian/src-brand": "^2.3.0",
    "@guardian/src-button": "^2.3.0",
    "@guardian/src-foundations": "^2.3.0",
    "@guardian/src-icons": "^2.3.0",
    "@guardian/types": "github:guardian/types#semver:^0.4.4",
    "@types/jsdom": "^16.2.4",
    "@types/uuid": "^8.3.0",
    "aws-sdk": "^2.754.0",
    "babel-jest": "^26.3.0",
    "compression": "^1.7.4",
    "core-js": "^3.6.5",
    "create-emotion-server": "^10.0.27",
    "emotion": "^10.0.27",
    "emotion-server": "^10.0.27",
    "express": "^4.17.1",
    "jsdom": "^16.4.0",
    "node-fetch": "^2.6.1",
    "node-int64": "^0.4.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "source-map-support": "^0.5.19",
    "thrift": "^0.12.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@storybook/addon-knobs": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@storybook/storybook-deployer": "^2.8.6",
    "@types/clean-css": "^4.2.2",
    "@types/compression": "^1.7.0",
    "@types/enzyme": "^3.10.6",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/express": "^4.17.8",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.22",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "babel-loader": "^8.1.0",
    "clean-css": "^4.2.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint": "^7.9.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "html-webpack-plugin": "^4.4.1",
    "jest": "^26.4.2",
    "storybook-chromatic": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-manifest-plugin": "^2.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  }
}
